<UserControl x:Class="MeshManipulation.View.ForTesting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="207*"/>
        </Grid.RowDefinitions>
        <Button Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="118" Height="30" Click="btnStart_Click"/>
        <Grid Grid.Row="1">
            <ProgressBar Name="pbStatus" HorizontalAlignment="Center" VerticalAlignment="Center"
                     Height="30"
                     Width="250"                         
                     Minimum="0"
                     Maximum="100"
                     />
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding ElementName=pbStatus, Path=Value, StringFormat={}{0:0}%}" />     
        </Grid>


    </Grid>
</UserControl>
